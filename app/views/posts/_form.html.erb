<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>

  <div>
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :name %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>

  <%end%>

  <%= link_to "Back", :root %>
