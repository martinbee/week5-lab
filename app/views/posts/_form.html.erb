<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, :placeholder=> "Post Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :link, :placeholder=> "Link Url", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.collection_select :user_id, User.all, :id, :name,{prompt: "Select Username"}, class: "form-control select" %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>

  <%= link_to (image_tag "Home.png", width: 35, height: 35, class: "home"), :root%>

  <%end%>
